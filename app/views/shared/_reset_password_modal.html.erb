<div class="modal fade" id="resetPasswordModal" tabindex="-1" role="dialog" aria-labelledby="resetPasswordModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="resetPasswordModalLabel">Reset password</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for :user, url: "/users/reset_password" do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <label for="email">Email</label>
              <%= f.email_field :email, placeholder: "Insert your email", class: 'form-control' %>
          </div>
          <%= link_to "Still not registered? Please, sign up", "#", "data-dismiss"=>"modal", "data-toggle"=>"modal", "data-target"=>"#signUpModal" %><br>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
