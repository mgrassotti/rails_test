<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3 border-bottom">
  <p><strong>Home</strong> / Widgets</p>
</div>

<h2>List</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Kind</th>
        <th>User</th>
        <th>Owner</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @widgets.each do |widget| %>
        <tr>
          <td><%= widget.id %></td>
          <td><%= widget.name %></td>
          <td><%= widget.description %></td>
          <td><%= widget.kind %></td>
          <td><%= image_tag widget.user.images["small_url"], style: "max-height: 25px; border-radius: 50px;" %> <%= link_to widget.user.name, user_path(widget.user.id) %></td>
          <td><%= widget.owner %></td>
          <td><%= link_to 'Show', widget_path(widget.id), class: "btn btn-sm btn-primary" %>&nbsp;&nbsp;<%= link_to 'Edit', edit_widget_path(widget.id), class: "btn btn-sm btn-warning" %>&nbsp;&nbsp;<%= link_to 'Destroy', widget_path(widget.id), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Add a new widget', new_widget_path, class: "btn btn-sm btn-primary" %>
