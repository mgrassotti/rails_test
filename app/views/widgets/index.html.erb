<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3 border-bottom">
  <p><strong>Home</strong> / Widgets</p>
</div>

<h2>List</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @widgets.each do |widget| %>
        <tr>
          <td><%= widget.id %></td>
          <td><%= widget.name %></td>
          <td><%= link_to 'Show', widget %></td>
          <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
          <td><%= link_to 'Destroy', widget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Add a new widget', new_widget_path %>
